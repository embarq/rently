{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "hosting": [
    {
      "target": "rently",
      "public": "dist/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssr"
        },
        {
          "source": "/",
          "function": "ssr"
        }
      ]
    }
  ]
}
